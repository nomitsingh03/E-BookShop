package com.DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import com.entity.BookDetails;
import com.entity.Cart;

public class CartDATA implements CartDAO{

	private Connection conn;
	public CartDATA (Connection conn) {
		this.conn=conn;
	}
	@Override
	public boolean addCart(Cart c) {
		// TODO Auto-generated method stub
		boolean f = false;
		try {
			String sql = "insert into cart(bid,userId,bookName,author,price,total_price) values(?,?,?,?,?,?)";
			PreparedStatement ps= conn.prepareStatement(sql);
			ps.setInt(1, c.getBookId());
			ps.setInt(2, c.getUserId());
			ps.setString(3, c.getBookName());
			ps.setString(4, c.getAuthor());
			ps.setDouble(5, c.getPrice());
			ps.setDouble(6, c.getTotalPrice());
			int i=ps.executeUpdate();
			if(i==1) {
				f=true;
			}
		} catch(Exception e) {
			e.printStackTrace();
		}
		return f;
	}
	
	@Override
	public Cart getBookByUser(int userId) {
		// TODO Auto-generated method stub
		Cart c = null;
		int totalPrice=0;
		try { 
			String sql = "select * from cart where uid=?";
			PreparedStatement ps = conn.prepareStatement(sql);
			ps.setInt(1,userId);
			
			ResultSet rs=ps.executeQuery();
			
			while(rs.next()) {
				c=new Cart();
				c.setBookId(userId);
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
		return null;
	}

}
