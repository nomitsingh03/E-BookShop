package com.DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.List;

import com.entity.BookOrder;

public class BookOrderDATA implements BookOrderDao {

	private Connection conn;
	
	public BookOrderDATA(Connection conn) {
		super();
		this.conn = conn;
	}

	@Override
	public int getOrderNo() {
		// TODO Auto-generated method stub
		int i=1;
		try {
			String sql = "select * from book_order";
			PreparedStatement ps = conn.prepareStatement(sql);
			ResultSet rs = ps.executeQuery();
			
			while(rs.next()) {
				i++;
			}
		} catch(Exception e) {
			e.printStackTrace();
		}
		return i;
	}

	@Override
	public boolean saveOrder(List<BookOrder> b) {
		// TODO Auto-generated method stub
		boolean f = false;
		try {
			String sql = "insert into book_order(order_id,user_name,email,address,mobile,book_name,author,price,payment) values(?,?,?,?,?,?,?,?,?)";
			
			conn.setAutoCommit(false);
			PreparedStatement ps = conn.prepareCall(sql);
		} catch(Exception e) {
			e.printStackTrace();
		}
		return false;
	}

}
